@model AskMeAQuestion.ViewModels.CreateCourseViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{Html.RenderAction("GetNavigationForUser", "Home", new { userId = Model.ProfessorId });}
<h2>Create a Course</h2>

<br />

@using (Html.BeginForm("CreateCourse", "Home", FormMethod.Post, new { enctype = "multi-part/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(x => x.UserId)
    <div class="row-fluid">
        <div class="col-md-5">
            <fieldset>
                <div class="form-group row-fluid">
                    <div class="col-md-4">
                        @Html.DisplayNameFor(x => x.ProfessorId)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(x => x.ProfessorId)
                        @Html.ValidationMessageFor(x => x.ProfessorId)
                    </div>
                </div>
                <div class="form-group row-fluid">
                    <div class="col-md-4">
                        @Html.DisplayNameFor(x => x.SectionId)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(x => x.SectionId)
                        @Html.ValidationMessageFor(x => x.SectionId)
                    </div>
                </div>
                <div class="form-group row-fluid">
                    <div class="col-md-4">
                        @Html.DisplayNameFor(x => x.CourseName)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(x => x.CourseName)
                        @Html.ValidationMessageFor(x => x.CourseName)
                    </div>
                </div>
                <div class="form-group row-fluid">
                    <div class="col-md-4">
                        @Html.DisplayNameFor(x => x.CourseDesignator)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(x => x.CourseDesignator)
                        @Html.ValidationMessageFor(x => x.CourseDesignator)
                    </div>
                </div>
                <div style="float:right; margin-right:75px">
                    <button type="submit" class="btn btn-default">Create</button>
                </div>
            </fieldset>
        </div>
    </div>

}
<script type="text/javascript">
    $(document).ready(function () {
        var errorMessage = '@Html.Raw(HttpUtility.JavaScriptStringEncode((string)TempData["ErrorMessage"]))';

        if (errorMessage != "") {
            alert(errorMessage);
        }

    });


</script>