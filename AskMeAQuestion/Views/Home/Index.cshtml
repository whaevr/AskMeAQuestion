@model AskMeAQuestion.ViewModels.IndexViewModel
@{
    ViewBag.Title = "Welcome!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/landing-page.css" rel="stylesheet">
<style>
    li {
        padding: 8px;
    }
    input {
        color: black;
    }
    a {
        font-style: italic;
        color: lawngreen;
    }
</style>

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multi-part/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="intro-header">
        <div class="container">
            <fieldset>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="intro-message">
                            <h1>Ask Me A Question!</h1>
                            <h3>Please login to continue</h3>
                            <div>
                                <p>
                                    No account yet?
                                    @Html.ActionLink("Register here!", "Register", "Home")
                                </p>
                            </div>
                            <hr class="intro-divider" />
                            <ul class="list-unstyled">
                                <li>
                                    <span class="glyphicon glyphicon-user"></span>
                                    @Html.TextBoxFor(x => x.UserName, new { placeholder = "User Name" })
                                          @Html.ValidationMessageFor(x => x.UserName)
                                </li>
                                <li>
                                    <span class="glyphicon glyphicon-lock"></span>
                                    @Html.PasswordFor(x => x.Password, new { placeholder = "Password" })
                                    @Html.ValidationMessageFor(x => x.Password)
                                </li>
                            </ul>
                        </div>
                        <div style="display: none;">
                            <button type="submit" class="btn btn-default">Log in</button>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        var errorMessage = '@Html.Raw(HttpUtility.JavaScriptStringEncode((string)TempData["ErrorMessage"]))';

        if (errorMessage != "") {
            alert(errorMessage);
        }

    });
</script>
